<?xml version="1.0" encoding="UTF-8"?>
    <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
        <url>
            <loc>{{host}}/{{subdomen}}</loc>
        </url>
{#        <url>#}
{#            <loc>{{host}}/{{subdomen}}catalog/</loc>#}
{#        </url>#}

        {% for slice in slices %}

            {% if (subdomen == '') %}
                {% if not ('gorod' in slice.alias|lower or '-na-' in slice.alias|lower) %}
                    <url>
                        <loc>{{host}}/{{subdomen}}catalog/{{slice.alias}}/</loc>
                    </url>
                {% endif %}
            {% else %}
                {% if not ('mosk' in slice.alias|lower or '-na-' in slice.alias|lower)%}
                    <url>
                        <loc>{{host}}/{{subdomen}}catalog/{{slice.alias}}/</loc>
                    </url>
                {% endif %}
            {% endif %}
        {% endfor %}

{#        <url>#}
{#            <loc>{{host}}/{{subdomen}}privacy/</loc>#}
{#        </url>#}

        {% for item in items %}
        	<url>
	            <loc>{{host}}/{{subdomen}}catalog/{{item.unique_id}}/</loc>
	        </url>
        {% endfor %}
        
    </urlset>