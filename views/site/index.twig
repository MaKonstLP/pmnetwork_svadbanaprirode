<h2>Test move media to satellite</h2>
<form method="POST" enctype="multipart/form-data" id="form">
    <input placeholder="media id" name="mediaId"><br>
    <input placeholder="url" name="url"><br>
    <input type="file" name="watermark" id="file"><br>
    <input type="hidden" name="token" value="4aD9u94jvXsxpDYzjQz0NFMCpvrFQJ1k">
    <button onclick="test(); return false;">Submit</button>
</form>

<script>
    function test() {
        var data = new FormData($('#form')[0])
        data.append('watermark', $('#file')[0].files[0]);
        $.ajax({
            type        : 'POST',
            method      : 'POST',
            url         : 'https://api.gorko.ru/api/v2/tools/mediaToSatellite',
            data        : data,
            crossDomain: true,
    		dataType: 'jsonp',
            cache       : false,
            contentType : false,
            processData : false,
            xhrFields : {
                withCredentials: true
            },
            success  : function(json){
                console.log(json);
            }
        });
    }
</script>

<div data-page-type="index">

	<div class="main_top">
        <h1>{{seo.h1}}</h1>
        <div class="main_top_desc">
            {{seo.text_top | raw}}
        </div>                    
    </div>

	<div class="content_block">
		<div class="title">
			<h2>Банкетные залы на природе</h2>
			<div class="title_count">{{count}} зал{{Declension.end_rooms(count)}}</div>
		</div>

		{{filter | raw }}
	</div>

	{% for widget in widgets %}
		<div data-widget-wrapper>
			<div class="listing_widget_header">
				<h3 class="listing_widget_title">{{widget.title}}</h3>
				<p class="listing_widget_subtitle">{{widget.subtitle}}</p>
			</div>
			<div class="items_list_listing swiper-container" data-listing-wrapper>
				<div class="items_list swiper-wrapper" data-listing-list>
					{{ this.render('//components/generic/listing.twig', {'items':widget.items, 'img_alt': widget.img_alt}) | raw }}
					<a href="/catalog/{{widget.slice.alias}}/" class="item listing_widget_link swiper-slide">
						<div class="listing_widget_link_img"></div>
						<div class="listing_widget_link_text">{{widget.link_text}}</div>
						<div class="listing_widget_link_arrow"></div>
					</a>
				</div>
				<div class="listing_widget_controll">
					<div class="listing_widget_arrow _prev"></div>
					<div class="listing_widget_pagination"></div>
					<div class="listing_widget_arrow _next"></div>
				</div>					
			</div>
			<div class="listing_widget_footer">
				<div class="seo_text" data-seo-text>
					{{widget.text | raw }}
					<div class="seo_text_control" data-seo-control>
						<p class="_link">Показать полностью</p>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}

	<div class="content_block">
		{{ this.render('//components/generic/form.twig') | raw }}
	</div>

</div>