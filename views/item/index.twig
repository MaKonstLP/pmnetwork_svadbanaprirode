<div data-page-type="item" data-item-id="{{ item.unique_id }}">

    <div class="content_block" data-listing-title>
        {{ this.render('//components/generic/item_title.twig', {'seo':seo, 'item': item}) | raw }}
    </div>

    <div class="content_block" data-page-type="item">
        <div class="object_head section section_gallery" data-item="gallery">
            <span class="nav-label" data-nav-label="gallery"></span>

            <div class="object_gallery" data-gallery data-id="{{item.id}}">
{#                <div class="swiper-container item_top_slider">#}
{#                    <div class="swiper-wrapper">#}
{#                        {% for image in item.images %}#}
